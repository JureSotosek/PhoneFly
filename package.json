{
  "name": "phonefly-app",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all build:react build:bundle",
    "build:bundle": "webpack --config webpack.config.js --mode 'production'",
    "build:react": "react-scripts build",
    "dev": "npm-run-all build --parallel dev:serve dev:open",
    "dev:open": "open https://www.facebook.com/embed/instantgames/746821112354806/player?game_url=https://localhost:3000",
    "dev:serve": "http-server --ssl -C './certificates/cert.pem' -K './certificates/key.pem' -c-1 -p 3000 -a localhost",
    "fmt": "prettier './**/*.{js,jsx,ts,tsx,css,scss,md,json,yml}'",
    "fmt:check": "prettier --check './src/**/*.{js,jsx,ts,tsx,css,scss,md,json,yml}'",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}' --fix --format verbose --project tsconfig.json",
    "pre-commit": "npm-run-all lint fmt:check",
    "upload": "npm-run-all upload:zip",
    "upload:zip": "zip -r public.zip public"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@types/jest": "24.0.21",
    "@types/node": "^12.0.10",
    "@types/react": "16.9.11",
    "@types/react-dom": "16.9.3",
    "http-server": "^0.11.1",
    "husky": "^3.0.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.2.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.2",
    "webpack-cli": "^3.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit"
    }
  }
}
