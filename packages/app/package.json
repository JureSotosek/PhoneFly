{
  "name": "phonefly-app",
  "version": "0.1.0",
  "homepage": "https://github.com/juresotosek/phonefly",
  "license": "MIT",
  "dependencies": {
    "@types/jest": "24.0.15",
    "@types/react": "16.8.22",
    "@types/react-dom": "16.8.4",
    "http-server": "^0.11.1",
    "npm-run-all": "^4.1.5",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "tslint-react": "^4.0.0",
    "webpack-cli": "^3.3.5"
  },
  "scripts": {
    "dev": "npm-run-all build --parallel dev:serve dev:open",
    "dev:serve": "http-server --ssl -C './certificates/cert.pem' -K './certificates/key.pem' -c-1 -p 3000 -a localhost",
    "dev:open": "open https://www.facebook.com/embed/instantgames/746821112354806/player?game_url=https://localhost:3000",
    "build": "npm-run-all build:react build:bundle build:zip",
    "build:react": "react-scripts build",
    "build:bundle": "webpack --config webpack.config.js --mode 'production'",
    "build:zip": "zip -r public.zip public",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}' --fix --format verbose --project tsconfig.json",
    "fmt": "prettier './**/*.{js,jsx,ts,tsx,css,scss,md,json,yml}'",
    "fmt:check": "prettier --check './src/**/*.{js,jsx,ts,tsx,css,scss,md,json,yml}'",
    "pre-commit": "npm-run-all lint fmt:check"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
